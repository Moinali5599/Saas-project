<html>
<head>
	<title>Menu</title>
	<link rel="stylesheet" type="text/css" href="menuhome-style.css">
</head>
<body>
<section class="Navbar">
<div class="logo">
<%= link_to(image_tag("logo.png", width: "60px"), "/") %>
</div>
		<h1>Beans n Cream</h1>
		<ul>
		    <li>
			  <a href="/">Home</a>
			  <a href="/menu">Order</a>
			  <a href="/about">About us</a>
			</li>
		</ul>
		<button><a href="signup.html">Sign in</a></button>
		<button><a href="signup.html">Sign up</a></button>
</section>
<div class="bg">
<%= image_tag("menuhomebg.png") %>
</div>
<section class="menus">
<h1>Menus</h1>
<section class="addmenu">
<h3>Add Menu</h3>
<form class="AddMenu-Form" action="/menu" method="POST">
<input class="menu-title" type="text" placeholder="Menu Name" name="menu_name">
<input class="menu-description" type="text" placeholder="Menu Description" name="menu_desc">
<input class="addmenu-button" type="submit" value="Add">
</form>
</section>
<% Menu.all.each do |menu| %>
<div class="menu-section">
	<a href="#"><%= menu.menu_name %></a>
	<p><%= menu.menu_desc %></p>
	<%= form_with(url: "/menu/#{menu.id}", method: "post") do %>
	<select class="Status" name="status">
		<option>active</option>
		<option>not active</option>
	</select>
	<% end %>
	<%= form_with(url: "/menu/#{menu.id}", method: "delete") do %>
	<input class="delete-button" type="submit" value="Delete">
	<% end %>
</div>
<% end %>
</section>
<footer>
<div class="Store">
	<h3>Our stores</h3>
	<p>Chennai</p>
	<p>Guntur</p>
	<p>Vijayawada</p>
	<p>Nellore</p>
	<h5>&copy;Copyright-2020</h5>
</div>
</footer>
</body>
</html>
